<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="AppListaDeCompras.Views.ListToBuyPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:vm="clr-namespace:AppListaDeCompras.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.BindingContext>
        <vm:ListToBuyViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="75, *">
        <StackLayout
            Grid.Row="0"
            Orientation="Horizontal"
            Padding="10">
            <Image HeightRequest="37" Source="back.png" />
            <Entry
                HorizontalOptions="FillAndExpand"
                Margin="15,0,0,0"
                Placeholder="Pesquisar" />
        </StackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding ListToBuy}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="70, *, 70" RowDefinitions="Auto, 30">
                        <Image
                            Grid.Column="0"
                            Grid.Row="0"
                            Source="my_list.png" />
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="{Binding Name}" />
                            <HorizontalStackLayout>
                                <Label Text="{Binding Products.Count}" />
                                <Label Text=" itens - " />
                                <Label Text="{Binding Users.Count}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="2"
                            Grid.Row="0"
                            Text="R$ 55,00" />

                        <HorizontalStackLayout Grid.ColumnSpan="2" Grid.Row="1">
                            <Button ImageSource="share.png" Text="Compartilhar" />
                            <Button ImageSource="delete.png" Text="Excluir" />
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource Paragraph}"
                    Text="Nenhuma lista de compras"
                    VerticalOptions="Center" />
            </CollectionView.EmptyView>
        </CollectionView>

        <Button
            Grid.Row="1"
            HorizontalOptions="End"
            Margin="20"
            Text="+"
            VerticalOptions="End" />
    </Grid>

</ContentPage>